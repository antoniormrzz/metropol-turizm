<div class="modal micromodal-slide" id="modal-2" aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <div
      class="modal__container"
      style="width: 600px"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-1-title"
    >
      <header class="modal__header">
        <h2 class="modal__title" id="modal-1-title">Bize Ulaşın</h2>
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        ></button>
      </header>
      <main class="modal__content" id="modal-1-content">
        <form id="contact_form" @submit.prevent="submitForm">
          <div class="px-6 space-y-4 pb-10 h-auto bg-gray-100 pt-10">
            <div>
              <label for="" class="text-xs font-semibold px-1 text-gray-700"
                >İsim Soyisim</label
              >
              <div class="flex">
                <div
                  class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"
                >
                  <i class="mdi mdi-account-outline text-gray-400 text-lg"></i>
                </div>
                <input
                  name="name_surname"
                  v-model="form.name"
                  type="text"
                  required
                  class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500"
                  placeholder="İsim Soyisim"
                />
              </div>
            </div>
            <div>
              <label for="" class="text-xs font-semibold px-1 text-gray-700"
                >E-mail</label
              >
              <div class="flex">
                <div
                  class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"
                >
                  <i class="mdi mdi-email-outline text-gray-400 text-lg"></i>
                </div>
                <input
                  type="email"
                  name="mail"
                  required
                  v-model="form.email"
                  class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500"
                  placeholder="example@example.com"
                />
              </div>
            </div>
            <div>
              <label class="text-xs font-semibold px-1 text-gray-700"
                >Tour</label
              >
              <input
                id="selectedTourName"
                type="text"
                name="tour"
                v-model="form.tourName"
                disabled
                class="w-full pl-4 text-gray-500 font-semibold pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500"
              />
            </div>
            <div>
              <label for="" class="text-xs font-semibold px-1 text-gray-700"
                >Message</label
              >
              <textarea
                name="message"
                v-model="form.message"
                required
                class="w-full py-2 px-2 bg-white rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500"
                rows="6"
              ></textarea>
            </div>
            <input
              type="submit"
              value="Gönder"
              class="ml-auto w-1/2 md:w-1/5 max-w-xs mx-auto bg-indigo-500 hover:bg-indigo-700 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font-semibold"
            />
          </div>
        </form>
      </main>
    </div>
  </div>
</div>
